# ===========================
# Oracle - Desempenho / Pool / Timeouts
# ===========================
# Tamanho do pool de conexões
ORACLE_POOL_MIN=1
ORACLE_POOL_MAX=5
ORACLE_POOL_INC=1

# Tamanho do cache de statements (ajuda a reusar planos)
ORACLE_STMT_CACHE=100

# Timeout por chamada em milissegundos (usado como padrão no back-end)
ORACLE_CALL_TIMEOUT_MS=20000

